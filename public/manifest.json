{
  "manifest_version": 3,
  "name": "Split Soul",
  "version": "1.0",
  "description": "",
  "action": {
    "default_popup": "src/popup/index.html",
    "default_icon": "icons/icon.png"
  },
  "options_page": "src/options/index.html",
  "permissions": ["storage", "tabs", "activeTab", "scripting"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
